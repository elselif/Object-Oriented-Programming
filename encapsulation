#include <iostream>

using namespace std;
class Employee
{
	private :
		string name;
		int age;
	public:
		void setAge(int yas)
		{
			if(yas<0){
				cout << "boyle bir deger veremezsiniz " << endl;
			}
			else{
				age = yas;
			}
		}
		int getAge()
		{
			return age;
		}
		void setName(string isim){
			name = isim;
		}
		string getName(){
			return name;
		}
		
};

int main() {
	
	Employee employee;
	
	
	
	employee.setName("elif emre");
	employee.setAge(-4);
	
	cout << employee.getName()<<endl;
	cout<< employee.getAge()<<endl;
	
	return 0;
}
